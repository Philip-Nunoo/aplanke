  	<!-- Set the viewport width to device width for mobile -->
  	<meta name="viewport" content="width=device-width, initial-scale=1.0" />

  	<title><%= content_for?(:title) ? yield(:title) : "Aplanke" %></title>
  	<link href='http://fonts.googleapis.com/css?family=Bubbler+One|Molle:400italic' rel='stylesheet' type='text/css'>
  	<%= stylesheet_link_tag    "application" %>
  	<%= javascript_include_tag "vendor/custom.modernizr" %>
    <%= csrf_meta_tags %>
    <style type="text/css">
    body{
      border-top:4px solid #0195FF;
    	font-family: 'Bubbler One', sans-serif;
    	/*background-image: url('assets/bgnoise_lg.png');*/
    	/*background-color: #0195FF;*/
    	/*color: white;*/
    	font-size: 11pt/1.3em Georgia,Times New Roman,serif;
    }

    .title {
      width: 200px;
    }
    html, body {
    	height: 100%;
    }

	#wrap {
		min-height: 100%;
	}

	#main {
		overflow:auto;
		padding-bottom: 50px;
	}  /* must be same height as the footer */

    footer{
  		position: relative;
  		margin-top: -50px; /* negative value of footer height */
  		height: 50px;
  		clear:both;
    	color: white;
    	text-align: center;
    	padding: 10px;
    	font-size: 11px;
    	background-color: #F88C16;
      border-top:4px solid #0195FF;
    }
    </style>

  </head>

  <body>
    <%= javascript_include_tag "application" %>
  	<div id="wrap">
	  	<div id="main">
	  	<%= yield %>	  	
	 	</div>
 	</div>
 	<footer>

        <div id="fb-root"></div>
        <div class="fb-like" data-href="https://www.facebook.com/pages/Aplanke" data-width="The pixel width of the plugin" data-height="The pixel height of the plugin" data-colorscheme="light" data-layout="button_count" data-action="like" data-show-faces="true" data-send="false">facebook</div>
